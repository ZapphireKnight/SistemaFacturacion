@model Modulo_Facturacion.Models.Factura

@{
   ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Facturas</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="fas fa-chevron-right"></i>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Facturas" asp-action="Index">
                        Facturas
                    </a>
                </li>
                <li class="separator">
                    <i class="fas fa-chevron-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Eliminar Factura</a>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Eliminar Factura: <br /> Si elimina esta factura no podrá recuperarla. </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Vendedor</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           value="@Html.DisplayFor(model => model.IdVendedorNavigation.Nombre)"
                                           disabled />
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Cliente</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           value="@Html.DisplayFor(model => model.IdClienteNavigation.Nombre)"
                                           disabled />
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Articulo</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           value="@Html.DisplayFor(model => model.IdArticuloNavigation.Descripcion)"
                                           disabled />
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Precio Unitario</label>
                                    <div class="input-group mb-3">
                                        <input type="number"
                                               class="form-control form-control-lg"
                                               value="@Html.DisplayFor(model => model.PrecioUnitario)"
                                               aria-describedby="basic-addon2"
                                               disabled />
                                        <span class="input-group-text" id="basic-addon2">.00</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Cantidad</label>
                                    <input type="number"
                                           class="form-control form-control-lg"
                                           value="@Html.DisplayFor(model => model.Cantidad)"
                                           disabled />
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label>Fecha</label>
                                    <input type="text"
                                           class="form-control form-control-lg"
                                           value="@Html.DisplayFor(model => model.Fecha)"
                                           disabled />
                                </div>
                            </div>

                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Comentario">Comentarios</label>
                                        <textarea
                                            class="form-control"
                                            value="@Html.DisplayFor(model => model.Comentario)"
                                            rows="5"
                                            disabled
                                        ></textarea>
                                </div>
                            </div>


                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <div class="col-md-12 col-lg-12 text-center mt-4">
                                    <input type="submit"
                                           value="Eliminar Factura"
                                           class="btn btn-danger btn-lg" />
                                    <a asp-action="Index" class="btn btn-warning btn-lg">
                                        Volver Atrás
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

